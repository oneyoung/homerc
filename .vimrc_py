
"for pydiction
let g:pydiction_location="~/.vim/python/pydiction-1.2/complete-dict"

"in Python, Tab is not recommanded, so replace tab with 4 spaces
autocmd FileType python source ~/.vim/script/indent/python.vim
"menu/shortcuts to work with python files
autocmd FileType python source ~/.vim/script/python_fn.vim
"for python code folding
autocmd FileType python source ~/.vim/script/python_fold.vim

" for syntax highlight
let python_highlight_all=1
autocmd FileType python syntax keyword Special self

" disable annoying '#' auto indent
autocmd FileType python set nosmartindent

"pyfile ~/.vim/python/stream.py

" disable pymode repo autocomplete in python, let YCM handle it.
let g:pymode_rope_completion = 0
